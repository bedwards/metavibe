{
  "name": "metavibe",
  "version": "0.1.0",
  "description": "metavibe - built on claude-base",
  "type": "module",
  "bin": {
    "claude-base-init": "./bin/init.ts"
  },
  "scripts": {
    "init": "tsx bin/init.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "tsx watch src/api/index.ts",
    "dev:frontend": "vite",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "tsc -p tsconfig.api.json",
    "build:frontend": "vite build",
    "start": "node dist/api/index.js",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --max-warnings 0 --report-unused-disable-directives",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "screenshot": "tsx tools/screenshots/capture.ts",
    "screenshot:compare": "tsx tools/screenshots/compare.ts",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "discord:send": "tsx tools/discord/send.ts",
    "discord:read": "tsx tools/discord/read.ts",
    "gh:issue": "tsx tools/github/create-issue.ts",
    "gh:rate-limit": "tsx tools/github/check-rate-limit.ts",
    "stripe:customer": "tsx tools/stripe/customers.ts",
    "stripe:webhooks": "tsx tools/stripe/webhooks.ts",
    "content:watch": "tsx tools/content/watch-sessions.ts",
    "content:generate": "tsx tools/content/generate-content.ts",
    "content:parse": "tsx tools/content/parse-session.ts",
    "content:niche": "tsx tools/content/identify-niche.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.13.0",
    "stripe": "^20.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.1",
    "@types/pg": "^8.11.10",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.0.0",
    "eslint": "^9.11.0",
    "husky": "^9.1.6",
    "js-yaml": "^4.1.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

# Environment Configuration
# Copy this to .env and fill in values
# NEVER commit .env to version control

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database (Postgres via Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app

# Frontend
VITE_API_URL=http://localhost:3000

# Discord (for team communication tool)
# Get webhook URL from Discord server settings -> Integrations -> Webhooks
DISCORD_WEBHOOK_URL=

# GitHub (uses gh CLI auth by default, but can override)
# GITHUB_TOKEN is optional - gh CLI handles auth
GITHUB_OWNER=
GITHUB_REPO=

# Vercel (optional - for deployment)
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Supabase (optional - alternative to local postgres)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Neon (optional - alternative serverless postgres)
NEON_DATABASE_URL=
